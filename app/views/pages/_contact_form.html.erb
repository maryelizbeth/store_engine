<%= form_tag (contact_us_path) do |f| %>
  <fieldset class="contact-form">
    <div class="contact-fullname">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    
    <div class="contact-email">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="contact-subject">
      <%= label_tag :subject %>
      <%= text_field_tag :subject %>
    </div>
    
    <div class="contact-body">
      <%= label_tag :body %>
      <%= text_area_tag :body %>
    </div>
  </fieldset>
  
  <fieldset class="contact-actions">
    <%= submit_tag "Send", :class => 'btn btn-mini' %>
  </fieldset>
<% end %>