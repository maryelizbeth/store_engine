<h1>Carts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.id %></td>
        <td><%= cart.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_cart_path(cart), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', cart_path(cart), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_cart_path, :class => 'btn btn-primary' %>
