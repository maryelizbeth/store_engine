<%= form_for @cart, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Cart</legend>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', cart_path, :class => 'btn btn-danger' %>
    </div>
  </fieldset>
  <% end %>