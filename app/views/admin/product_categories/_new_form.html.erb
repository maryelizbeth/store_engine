<%= form_for @product_category, :url => admin_product_categories_path, :method => :post, :html => { :class => 'form-horizontal' } do |f| %>

<% if @product_category.errors.any? %> 
  <div id ="error_explanation"> 
    <div class= "alert alert-error">
    <h2><%= pluralize(@product_category.errors.count, "error") %>
      prohibited this product category from being saved:</h2>
    <ul> 
      <% @product_category.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <%end%>
    </ul> 
   </div>
  </div> 
<%end%>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Product Category</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :products, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :product_ids, Product.all.collect {|x| [x.title, x.id]}, {}, :multiple => true %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_product_categories_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
