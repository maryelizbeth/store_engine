<h1><span id="product_category_name"><%= @product_category.name %></span></h1>

<p>
  <b>Products</b><br>
  <ul>
    <% @product_category.products.each do |product| %>
    <li id="<%= dom_id product %>"><%= product.title %></li>
    <% end %>
  </ul>
</p>

<div class="indiv-prod-cat-form-actions">
  <%= link_to 'Back', admin_product_categories_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_admin_product_category_path(@product_category), :class => 'btn' %>
  <%= link_to 'Delete', admin_product_category_path(@product_category), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
