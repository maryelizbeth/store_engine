<%= form_for @product_category, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Product Category</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :products, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :product_ids, Product.all.collect {|x| [x.title, x.id]}, {}, :multiple => true %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', product_categories_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
