      <td>
        <% @products.each do |product| %>
      <table class = "indiv-product">
        <tr>
          <td colspan=2>
              <%= image_tag product.thumbnail, :class => "store_product_image", :id => "store_product_#{product.id}_image" %>
          </td>
          <td>
            <%= render :partial => "product_details", :locals => { :product => product } %>

          </td>
        </tr>
      </table>
  <% end %>
