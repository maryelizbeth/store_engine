<table class = "prod-attributes">
    <tr>
      <td id="store_product_<%= product.id %>_title"><%= link_to product.title, product_path(product) %>
      </td>
    </tr>
    <tr>
    <td id="store_product_<%= product.id %>_price"><%= number_to_currency(product.display_price) %>
    </td>
    </tr>
    <tr>
      <td id="store_product_<%= product.id %>_add_to_cart">
      <%= link_to "Add to Cart", add_to_cart_path(:product_id => product), :method => :post, :class => 'btn add_to_cart', :remote => true %>
      </td>
    </tr>
</table>
